<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentLearn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_learn_animation"
    tools:context=".FragmentLearn">

    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/urw"
        android:gravity="right"
        android:text="0/0"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textViewBel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105sp"
        android:layout_marginTop="205sp"

        android:fontFamily="@font/urw"
        android:text="аб’яднаныя"
        android:textColor="@color/colorWhite"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textViewBelLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105sp"
        android:layout_marginTop="245sp"
        android:fontFamily="@font/urw"
        android:text="аб’яднаныя"
        android:textColor="@color/colorWhite"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textViewEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105sp"
        android:layout_marginTop="325sp"
        android:fontFamily="@font/urw"
        android:text="united"
        android:textColor="@color/colorWhite"
        android:textSize="36sp" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/share"
        android:fontFamily="@font/helios"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDarkForStatus"
        android:textSize="24sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="450sp"
        android:background="@drawable/button_custom"
        android:fontFamily="@font/helios"
        android:text="✓"
        android:textSize="60sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/buttonShow"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:layout_marginLeft="205sp"
        android:layout_marginTop="450sp"
        android:background="@drawable/button_custom"
        android:fontFamily="@font/urw"
        android:text="\?"
        android:textColor="@color/colorPrimaryDarkForStatus"
        android:textSize="60sp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="76dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</RelativeLayout>